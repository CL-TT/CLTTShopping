/**app.wxss**/

@import './styles/iconfont.wxss';

page, view, text, navigator, swiper, swiper-item, image{
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

/**
* 1. 主题颜色通过变量来实现
* 2. 1px = 2rpx 
**/
page{
  /* 定义主题颜色 */
  --themeColor: #eb4450;

  /* 定义统一字体大小 */
  font-size: 28rpx;

  height: 100%;
}