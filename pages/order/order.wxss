.order-page {
  width: 100%;
}
.order-page .order-main {
  width: 100%;
  color: #747474;
}
.order-page .order-main .order-item {
  margin-bottom: 30rpx;
  border-bottom: 2rpx solid #ccc;
}
.order-page .order-main .order-item .order {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}
.order-page .order-main .order-item .order text {
  padding: 10rpx 15rpx;
}
.order-page .order-main .order-item .order .price {
  color: var(--themeColor);
}
.order-page .order-main .order-item .order .date {
  color: black;
}
